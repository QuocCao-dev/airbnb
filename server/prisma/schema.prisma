datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime  @default(now())
  description String
  firstName   String?
  id          String    @id @default(cuid())
  lastName    String?
  listings    Listing[]
  password    String
  price       Float
  roles       Json
  title       String
  updatedAt   DateTime  @updatedAt
  username    String    @unique
}

model Listing {
  createdAt          DateTime @default(now())
  id                 String   @id @default(cuid())
  listingCreatedBy   User     @relation(fields: [listingCreatedById], references: [id])
  listingCreatedById String
  locationData       Json
  locationType       String
  mapData            Json
  photos             Json
  placeAmenities     Json
  placeSpace         Json
  placeType          String
  updatedAt          DateTime @updatedAt
}
